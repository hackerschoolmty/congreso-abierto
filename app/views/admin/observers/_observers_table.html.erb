  <%= link_to "New Observer",
              new_admin_observer_path,
              :class => 'btn btn-primary' %>
              
<table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Full name</th>
        <th>Email</th>
        <th>Created_at</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% observers.each do |observer| %>
        <tr>
          <td><%= observer.id %></td>
          <td><%= observer.first_name + " " + observer.last_name %></td>
          <td><%= observer.email %></td>
          <td><%= observer.created_at.strftime("%d/%B/%y %H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<%= paginate observers, theme: 'twitter-bootstrap-3' %>

